[Unit]
Description=Web3Pi Nimbus Consensus Layer Client
After=network.target
Documentation=https://setup-guide.web3pi.io

[Service]
Type=simple
ExecStart=/home/ethereum/clients/nimbus/nimbus.sh
Restart=on-failure
RestartSec=120
KillSignal=SIGINT
TimeoutStopSec=900

[Install]
WantedBy=multi-user.target